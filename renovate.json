{
	"extends": [
		"config:recommended",
		":separateMultipleMajorReleases",
		":maintainLockFilesMonthly",
		":widenPeerDependencies",
		"schedule:monthly",
		"group:allNonMajor"
	],
	"packageRules": [
		{
			"matchUpdateTypes": ["patch"],
			"enabled": false,
			"matchPackageNames": [
				"!/^@internationalized/",
				"!/^@react-aria/",
				"!/^@react-stately/",
				"!/^@react-types/",
				"!/^react-aria-components/",
				"!/^react-stately/",
				"!/^react-aria/"
			]
		}
	],
	"rangeStrategy": "bump",
	"ignoreDeps": ["react-router-dom", "@biomejs/biome", "nx"]
}
