{
	"extends": [
		"config:recommended",
		":separateMultipleMajorReleases",
		":maintainLockFilesMonthly",
		":widenPeerDependencies",
		"schedule:monthly",
		"group:allNonMajor"
	],
	"packageRules": [
		{
			"matchUpdateTypes": ["patch"],
			"enabled": false,
			"matchPackageNames": [
				"!/^@internationalized/",
				"!/^@react-aria/",
				"!/^@react-stately/",
				"!/^@react-types/",
				"!/^react-aria-components/",
				"!/^react-stately/",
				"!/^react-aria/"
			]
		}
	],
	"rangeStrategy": "bump",
	"ignoreDeps": [
		"react-router",
		"@biomejs/biome",
		"nx",
		"@joshwooding/vite-plugin-react-docgen-typescript",
		"@storybook/addon-designs"
	]
}
