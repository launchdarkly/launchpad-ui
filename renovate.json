{
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":maintainLockFilesMonthly",
    ":widenPeerDependencies",
    "schedule:weekly",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "enabled": false,
      "excludePackagePatterns": [
        "^@react-aria",
        "^@react-stately",
        "^@react-types",
        "^react-aria-components"
      ]
    }
  ],
  "rangeStrategy": "bump",
  "ignoreDeps": ["react-router-dom", "style-dictionary", "@floating-ui/core", "@floating-ui/dom"]
}
