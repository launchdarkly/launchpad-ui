{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2019",
    "module": "es2020",
    "lib": ["DOM", "DOM.Iterable", "es2020"],
    "allowJs": true,
    "strict": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
