{
  "name": "launchpad-ui",
  "private": true,
  "version": "0.0.1",
  "description": "LaunchDarkly's design system",
  "scripts": {
    "build": "nx run-many --target=build --all --exclude=@launchpad-ui/remix",
    "build:packages": "nx affected --target=build",
    "build:transform": "nx run-many --target=build --projects=@launchpad-ui/tokens",
    "chromatic": "chromatic",
    "clean": "nx run-many --target=clean --all",
    "e2e:a11y": "concurrently -k --kill-signal SIGKILL -s first -n \"Storybook,e2e\" -c \"magenta,blue\" \"pnpm storybook:build && pnpm dlx http-server storybook-static -s\" \"wait-on http://127.0.0.1:8080 && STORYBOOK_URL=http://127.0.0.1:8080/ pnpm playwright test a11y\"",
    "e2e:ssr": "concurrently -k --kill-signal SIGKILL -s first -n \"Remix,e2e\" -c \"magenta,blue\" \"pnpm remix\" \"wait-on tcp:3000 && pnpm playwright test ssr\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "plop",
    "graph": "nx affected:graph",
    "lint": "eslint '**/*.{ts,tsx,js}' --ignore-pattern '/packages/' --ignore-pattern '/apps/'",
    "lint:ci": "pnpm build:transform && pnpm lint && pnpm lint:packages",
    "lint:packages": "nx affected --target=lint",
    "remix": "nx run-many --target=build --projects=@launchpad-ui/remix && pnpm --filter=\"remix\" start",
    "storybook": "pnpm build:transform && sb dev -p 3000",
    "storybook:build": "pnpm build:transform && sb build --quiet",
    "test": "pnpm build:transform && vitest run --coverage",
    "test:packages": "pnpm build:transform && nx affected --target=test --exclude=@launchpad-ui/remix",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "prepare": "husky install",
    "release": "nx affected --target=build --base=HEAD~1 --head=HEAD --exclude=@launchpad-ui/remix && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/launchdarkly/launchpad-ui.git"
  },
  "author": "Catamorphic Co.",
  "license": "",
  "bugs": {
    "url": "https://github.com/launchdarkly/launchpad-ui/issues"
  },
  "homepage": "https://github.com/launchdarkly/launchpad-ui#readme",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.1",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@etchteam/storybook-addon-status": "^4.2.4",
    "@playwright/test": "^1.39.0",
    "@storybook/addon-a11y": "^7.5.1",
    "@storybook/addon-designs": "^7.0.5",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.1",
    "@storybook/addons": "^7.5.1",
    "@storybook/api": "^7.5.1",
    "@storybook/blocks": "^7.5.1",
    "@storybook/cli": "^7.5.1",
    "@storybook/client-api": "^7.5.1",
    "@storybook/client-logger": "^7.5.1",
    "@storybook/components": "^7.5.1",
    "@storybook/core-client": "^7.5.1",
    "@storybook/core-events": "^7.5.1",
    "@storybook/react": "^7.5.1",
    "@storybook/react-vite": "^7.5.1",
    "@storybook/testing-library": "^0.2.0",
    "@storybook/theming": "^7.5.1",
    "@storybook/types": "^7.5.1",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vanilla-extract/css": "^1.13.0",
    "@vanilla-extract/vite-plugin": "^3.9.0",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "chromatic": "^7.5.4",
    "concurrently": "^8.2.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.1.0",
    "fast-glob": "^3.3.0",
    "framer-motion": "10.16.1",
    "husky": "^8.0.1",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.1",
    "nx": "^17.0.1",
    "plop": "^4.0.0",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup-plugin-pure": "^0.2.1",
    "storybook-addon-pseudo-states": "^2.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.1",
    "vite": "^4.5.0",
    "vite-plugin-turbosnap": "^1.0.2",
    "vitest": "^0.34.1",
    "wait-on": "^7.1.0"
  },
  "packageManager": "pnpm@8.10.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "stylelint": "15"
      }
    }
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not IE 11"
  ]
}
