{
  "name": "launchpad-ui",
  "private": true,
  "version": "0.0.1",
  "description": "LaunchDarkly's design system",
  "scripts": {
    "build": "nx run-many --target=build --all --exclude=@launchpad-ui/remix",
    "build:packages": "nx affected --target=build --base=origin/main --head=HEAD",
    "build:transform": "nx run-many --target=build --projects=@launchpad-ui/tokens,@launchpad-ui/icons",
    "chromatic": "chromatic",
    "clean": "nx run-many --target=clean --all",
    "e2e": "playwright test",
    "e2e:ci": "concurrently -k -s first -n \"SB,e2e\" -c \"magenta,blue\" \"pnpm storybook:build && http-server storybook-static --port 3000 --silent\" \"wait-on tcp:3000 && nx affected --target=e2e --base=origin/main --head=HEAD --exclude=@launchpad-ui/remix\"",
    "e2e:ssr": "concurrently -k -s first -n \"Remix,e2e\" -c \"magenta,blue\" \"pnpm remix\" \"wait-on tcp:3000 && nx run-many --target=e2e --projects=@launchpad-ui/remix\"",
    "e2e:watch": "chokidar packages/**/*.e2e.ts -c \"pnpm e2e\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "graph": "nx affected:graph",
    "lint": "eslint '**/*.{ts,tsx,js}' --ignore-pattern '/packages/' --ignore-pattern '/apps/'",
    "lint:ci": "pnpm build:transform && pnpm lint && pnpm lint:packages",
    "lint:packages": "nx affected --target=lint --base=origin/main --head=HEAD",
    "remix": "nx run-many --target=build --projects=@launchpad-ui/remix && pnpm --filter=\"remix\" start",
    "storybook": "pnpm build:transform && start-storybook -p 3000",
    "storybook:build": "pnpm build:transform && build-storybook --quiet",
    "test": "vitest run --coverage",
    "test:packages": "pnpm build:transform && nx affected --target=test --base=origin/main --head=HEAD",
    "test:watch": "vitest",
    "prepare": "husky install",
    "release": "nx affected --target=build --base=origin/main~1 --head=origin/main --exclude=@launchpad-ui/remix && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/launchdarkly/launchpad-ui.git"
  },
  "author": "Catamorphic Co.",
  "license": "",
  "bugs": {
    "url": "https://github.com/launchdarkly/launchpad-ui/issues"
  },
  "homepage": "https://github.com/launchdarkly/launchpad-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@parcel/css": "^1.9.0",
    "@playwright/test": "^1.22.0",
    "@storybook/addon-a11y": "^6.5.0",
    "@storybook/addon-essentials": "^6.5.0",
    "@storybook/addon-interactions": "^6.5.0",
    "@storybook/addons": "^6.5.0",
    "@storybook/api": "^6.5.0",
    "@storybook/client-api": "^6.5.0",
    "@storybook/builder-webpack5": "^6.5.0",
    "@storybook/manager-webpack5": "^6.5.0",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.5.0",
    "@storybook/testing-library": "^0.0.11",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest-axe": "^3.5.3",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vitejs/plugin-react": "^1.3.2",
    "babel-loader": "^8.2.4",
    "browserslist": "^4.20.3",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.5.4",
    "concurrently": "^7.2.0",
    "esbuild": "^0.14.36",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-testing-library": "^5.5.0",
    "fast-glob": "^3.2.11",
    "fsevents": "^2.3.2",
    "http-server": "^14.1.0",
    "husky": "^8.0.1",
    "jest-axe": "^6.0.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^13.0.0",
    "lodash-es": "^4.17.21",
    "nx": "^14.2.1",
    "postcss": "^8.4.13",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.6.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "storybook-addon-pseudo-states": "^1.14.0",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vitest": "^0.14.1",
    "wait-on": "^6.0.1",
    "webpack": "^5.72.0"
  },
  "packageManager": "pnpm@7.1.2",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/preset-env",
        "@storybook/addons",
        "@storybook/api",
        "@storybook/components",
        "@storybook/core-events",
        "@storybook/theming",
        "require-from-string"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
