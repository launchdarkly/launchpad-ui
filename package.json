{
	"name": "launchpad-ui",
	"private": true,
	"version": "0.0.1",
	"description": "LaunchDarkly's design system",
	"scripts": {
		"build": "nx run-many --target=build --all",
		"build:packages": "nx affected --target=build",
		"build:transform": "nx run-many --target=build --projects=@launchpad-ui/tokens",
		"check": "biome check . --apply",
		"chromatic": "chromatic",
		"clean": "nx run-many --target=clean --all",
		"e2e:a11y": "concurrently -k --kill-signal SIGKILL -s first -n \"Storybook,e2e\" -c \"magenta,blue\" \"pnpm storybook:build && pnpm dlx http-server storybook-static -s\" \"wait-on http://127.0.0.1:8080 && STORYBOOK_URL=http://127.0.0.1:8080/ pnpm playwright test a11y\"",
		"generate": "plop",
		"graph": "nx affected:graph",
		"lint:packages": "pnpm build:transform && nx affected --target=lint",
		"storybook": "pnpm build:transform && sb dev -p 3000",
		"storybook:build": "pnpm build:transform && sb build --quiet",
		"test": "pnpm build:transform && vitest run --coverage",
		"test:packages": "pnpm build:transform && nx affected --target=test",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"prepare": "husky",
		"release": "nx affected --target=build --base=HEAD~1 --head=HEAD && changeset publish",
		"typecheck": "pnpm build:transform && tsc --noEmit --emitDeclarationOnly false --skipLibCheck"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/launchdarkly/launchpad-ui.git"
	},
	"author": "Catamorphic Co.",
	"license": "",
	"bugs": {
		"url": "https://github.com/launchdarkly/launchpad-ui/issues"
	},
	"homepage": "https://github.com/launchdarkly/launchpad-ui#readme",
	"devDependencies": {
		"@axe-core/playwright": "^4.8.3",
		"@biomejs/biome": "^1.5.3",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.1",
		"@commitlint/cli": "^19.0.3",
		"@commitlint/config-conventional": "^19.0.3",
		"@commitlint/types": "^19.0.3",
		"@etchteam/storybook-addon-status": "^4.2.4",
		"@playwright/test": "^1.42.1",
		"@storybook/addon-a11y": "^7.6.3",
		"@storybook/addon-designs": "^7.0.5",
		"@storybook/addon-essentials": "^7.6.3",
		"@storybook/addon-interactions": "^7.6.3",
		"@storybook/addon-themes": "^7.6.10",
		"@storybook/addons": "^7.6.3",
		"@storybook/api": "^7.6.3",
		"@storybook/blocks": "^7.6.3",
		"@storybook/cli": "^7.6.3",
		"@storybook/client-api": "^7.6.3",
		"@storybook/client-logger": "^7.6.3",
		"@storybook/components": "^7.6.3",
		"@storybook/core-client": "^7.6.3",
		"@storybook/core-events": "^7.6.3",
		"@storybook/react": "^7.6.3",
		"@storybook/react-vite": "^7.6.3",
		"@storybook/test": "^7.6.7",
		"@storybook/theming": "^7.6.3",
		"@storybook/types": "^7.6.3",
		"@testing-library/dom": "^9.3.0",
		"@testing-library/jest-dom": "^6.4.0",
		"@testing-library/react": "^14.2.0",
		"@testing-library/user-event": "^14.5.1",
		"@types/css-modules": "^1.0.5",
		"@types/node": "^20.11.4",
		"@types/react": "^18.2.8",
		"@types/react-dom": "^18.2.4",
		"@vanilla-extract/css": "^1.14.0",
		"@vanilla-extract/vite-plugin": "^4.0.2",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"@vitest/coverage-v8": "^1.3.1",
		"@vitest/ui": "^1.3.1",
		"browserslist": "^4.23.0",
		"chromatic": "^11.0.0",
		"concurrently": "^8.2.0",
		"deepmerge": "^4.3.1",
		"fast-glob": "^3.3.0",
		"husky": "^9.0.3",
		"jsdom": "^24.0.0",
		"lightningcss": "^1.24.0",
		"lint-staged": "^15.2.0",
		"nx": "^18.0.1",
		"plop": "^4.0.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"rollup-plugin-pure": "^0.2.1",
		"storybook-addon-pseudo-states": "^2.2.0",
		"stylelint": "^16.2.0",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-value-no-unknown-custom-properties": "^6.0.1",
		"typescript": "^5.3.2",
		"typescript-plugin-css-modules": "^5.1.0",
		"vite": "^5.1.1",
		"vite-plugin-turbosnap": "^1.0.2",
		"vitest": "^1.3.1",
		"wait-on": "^7.2.0"
	},
	"packageManager": "pnpm@8.15.1",
	"pnpm": {
		"peerDependencyRules": {
			"allowedVersions": {
				"react": "18",
				"vite": "5"
			}
		}
	},
	"browserslist": ["last 2 versions", "not dead", "not IE 11"]
}
