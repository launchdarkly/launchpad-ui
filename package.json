{
  "name": "launchpad-ui",
  "private": true,
  "version": "0.0.1",
  "description": "LaunchDarkly's design system",
  "scripts": {
    "build": "nx run-many --target=build --all --exclude=@launchpad-ui/remix",
    "build:packages": "nx affected --target=build --base=origin/main --head=HEAD",
    "build:transform": "nx run-many --target=build --projects=@launchpad-ui/tokens,@launchpad-ui/icons",
    "chromatic": "chromatic",
    "clean": "nx run-many --target=clean --all",
    "e2e": "pnpm build && playwright test --config=./playwright.config.ct.ts",
    "e2e:ssr": "concurrently -k -s first -n \"Remix,e2e\" -c \"magenta,blue\" \"pnpm remix\" \"wait-on tcp:3000 && pnpm --filter=\"remix\" e2e\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "plop",
    "graph": "nx affected:graph",
    "lint": "eslint '**/*.{ts,tsx,js}' --ignore-pattern '/packages/' --ignore-pattern '/apps/'",
    "lint:ci": "pnpm build:transform && pnpm lint && pnpm lint:packages",
    "lint:packages": "nx affected --target=lint --base=origin/main --head=HEAD",
    "remix": "nx run-many --target=build --projects=@launchpad-ui/remix && pnpm --filter=\"remix\" start",
    "storybook": "pnpm build:transform && sb dev -p 3000",
    "storybook:build": "pnpm build:transform && sb build --quiet",
    "test": "pnpm build && vitest run --coverage",
    "test:packages": "nx affected --target=test --base=origin/main --head=HEAD --exclude=@launchpad-ui/remix",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "prepare": "husky install",
    "release": "nx affected --target=build --base=origin/main~1 --head=origin/main --exclude=@launchpad-ui/remix && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/launchdarkly/launchpad-ui.git"
  },
  "author": "Catamorphic Co.",
  "license": "",
  "bugs": {
    "url": "https://github.com/launchdarkly/launchpad-ui/issues"
  },
  "homepage": "https://github.com/launchdarkly/launchpad-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-react": "^7.18.6",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.24.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@etchteam/storybook-addon-status": "^4.2.1",
    "@parcel/css": "^1.13.0",
    "@playwright/test": "^1.25.0",
    "@playwright/experimental-ct-react": "^1.25.0",
    "@react-stately/collections": "^3.4.0",
    "@storybook/addon-a11y": "^7.0.0-alpha.10",
    "@storybook/addon-essentials": "^7.0.0-alpha.10",
    "@storybook/addon-interactions": "^7.0.0-alpha.10",
    "@storybook/addons": "^7.0.0-alpha.10",
    "@storybook/api": "^7.0.0-alpha.10",
    "@storybook/cli": "^7.0.0-alpha.10",
    "@storybook/client-api": "^7.0.0-alpha.10",
    "@storybook/react": "^7.0.0-alpha.10",
    "@storybook/react-webpack5": "^7.0.0-alpha.10",
    "@storybook/testing-library": "^0.0.11",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.2",
    "@types/node": "^18.6.5",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitest/coverage-c8": "^0.22.0",
    "@vitest/ui": "^0.22.0",
    "babel-loader": "^8.2.4",
    "browserslist": "^4.21.1",
    "chromatic": "^6.7.0",
    "concurrently": "^7.3.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.15.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "expect-axe-playwright": "^2.2.1",
    "fast-glob": "^3.2.11",
    "framer-motion": "^7.2.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.0",
    "nx": "^14.5.1",
    "plop": "^3.1.1",
    "prettier": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "storybook-addon-pseudo-states": "^1.15.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "typescript": "^4.7.2",
    "vite": "^3.0.0",
    "vitest": "^0.22.0",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0"
  },
  "packageManager": "pnpm@7.9.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@storybook/components",
        "@storybook/core-events",
        "@storybook/theming",
        "jest-specific-snapshot",
        "require-from-string"
      ],
      "allowedVersions": {
        "@storybook/addons": "7",
        "@storybook/api": "7",
        "react": "18",
        "react-dom": "18"
      }
    },
    "overrides": {
      "@vitejs/plugin-react": "^2.0.0",
      "vite": "^3.0.0"
    }
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not IE 11"
  ]
}
