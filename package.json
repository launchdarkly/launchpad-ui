{
  "name": "launchpad-ui",
  "private": true,
  "version": "0.0.1",
  "description": "LaunchDarkly's design system",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=...[HEAD^1]",
    "build:tokens": "turbo run build --filter=@launchpad-ui/tokens",
    "chromatic": "chromatic",
    "e2e": "playwright test",
    "e2e:ci": "concurrently -k -s first -n \"SB,e2e\" -c \"magenta,blue\" \"pnpm storybook:build --quiet && http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && turbo run e2e --filter=...[HEAD^1]\"",
    "e2e:watch": "chokidar packages/**/*.e2e.ts -c \"pnpm e2e\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint '**/*.{ts,tsx,js}' --ignore-pattern '/packages/'",
    "lint:packages": "turbo run lint --filter=...[HEAD^1]",
    "storybook": "pnpm build:tokens && start-storybook -p 6006",
    "storybook:build": "pnpm build:tokens && build-storybook --quiet",
    "test": "vitest run --coverage",
    "test:packages": "turbo run test --filter=...[HEAD^1]",
    "test:watch": "vitest",
    "prepare": "husky install",
    "release": "changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/launchdarkly/launchpad-ui.git"
  },
  "author": "Catamorphic Co.",
  "license": "",
  "bugs": {
    "url": "https://github.com/launchdarkly/launchpad-ui/issues"
  },
  "homepage": "https://github.com/launchdarkly/launchpad-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@playwright/test": "^1.21.1",
    "@storybook/addon-a11y": "^6.5.0-beta.3",
    "@storybook/addon-essentials": "^6.5.0-beta.3",
    "@storybook/builder-webpack5": "^6.5.0-beta.3",
    "@storybook/manager-webpack5": "^6.5.0-beta.3",
    "@storybook/react": "^6.5.0-beta.3",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^18.0.8",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vitejs/plugin-react": "^1.3.2",
    "babel-loader": "^8.2.4",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.5.4",
    "concurrently": "^7.1.0",
    "esbuild": "^0.14.36",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "fast-glob": "^3.2.11",
    "fsevents": "^2.3.2",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "jest-axe": "^6.0.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "turbo": "^1.2.4",
    "typescript": "^4.6.3",
    "vite": "^2.9.5",
    "vitest": "^0.10.2",
    "wait-on": "^6.0.1",
    "webpack": "^5.72.0"
  },
  "packageManager": "pnpm@7.0.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "require-from-string"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
