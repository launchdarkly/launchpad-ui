{
	"name": "@launchpad-ui/form",
	"version": "0.15.4",
	"description": "Elements for composing forms, such as input fields, labels, radio buttons, etc.",
	"repository": "launchdarkly/launchpad-ui",
	"license": "Apache-2.0",
	"status": "beta",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.es.js",
	"source": "src/index.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"build": "vite build -c ../../vite.config.mts && tsc --project tsconfig.build.json",
		"clean": "rm -rf dist",
		"test": "vitest run --coverage"
	},
	"dependencies": {
		"@launchpad-ui/button": "workspace:~",
		"@launchpad-ui/icons": "workspace:~",
		"@launchpad-ui/tokens": "workspace:~",
		"@launchpad-ui/tooltip": "workspace:~",
		"@react-stately/numberfield": "3.10.1",
		"classix": "2.2.0"
	},
	"devDependencies": {
		"@react-aria/button": "3.14.1",
		"@react-aria/i18n": "3.12.12",
		"@react-aria/numberfield": "3.12.1",
		"@react-aria/visually-hidden": "3.8.27",
		"react": "19.1.1",
		"react-dom": "19.1.1"
	},
	"peerDependencies": {
		"@react-aria/button": "3.14.1",
		"@react-aria/i18n": "3.12.12",
		"@react-aria/numberfield": "3.12.1",
		"@react-aria/visually-hidden": "3.8.27",
		"react": "19.1.1",
		"react-dom": "19.1.1"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.es.js",
			"require": "./dist/index.js"
		},
		"./package.json": "./package.json",
		"./style.css": "./dist/style.css"
	}
}
