{
	"name": "@launchpad-ui/modal",
	"version": "0.21.7",
	"description": "An element that presents users information and actions over a page.",
	"repository": "launchdarkly/launchpad-ui",
	"license": "Apache-2.0",
	"status": "beta",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.es.js",
	"source": "src/index.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
