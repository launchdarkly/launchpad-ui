{
  "name": "@launchpad-ui/alert",
  "version": "0.1.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "An element that informs users of a state or function of the product at a more granular level than banners.",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./styles/*": "./dist/styles/*"
  },
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc && node build.js",
    "e2e": "playwright test --config=../../playwright.config.ts",
    "lint": "eslint '**/*.{ts,tsx,js}' && stylelint '**/*.css' --ignore-path ../../.stylelintignore",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@launchpad-ui/button": "workspace:~",
    "@launchpad-ui/icons": "workspace:~",
    "@launchpad-ui/tokens": "workspace:~",
    "classnames": "^2.3.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  }
}
