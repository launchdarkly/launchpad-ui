{
	"name": "@launchpad-ui/popover",
	"version": "0.14.1",
	"description": "An element that displays content within a portal triggered by user interactions.",
	"repository": "launchdarkly/launchpad-ui",
	"license": "Apache-2.0",
	"status": "beta",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.es.js",
	"source": "src/index.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
		"**/*.css"
	],
	"scripts": {
		"build": "vite build -c ../../vite.config.mts && tsc --project tsconfig.build.json",
		"clean": "rm -rf dist",
		"test": "vitest run --coverage"
	},
	"dependencies": {
		"@floating-ui/core": "1.7.0",
		"@floating-ui/dom": "1.7.0",
		"@launchpad-ui/focus-trap": "workspace:~",
		"@launchpad-ui/overlay": "workspace:~",
		"@launchpad-ui/tokens": "workspace:~",
		"classix": "2.2.0",
		"framer-motion": "12.23.22"
	},
	"devDependencies": {
		"react": "19.2.0",
		"react-dom": "19.2.0"
	},
	"peerDependencies": {
		"react": "19.2.0",
		"react-dom": "19.2.0"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.es.js",
			"require": "./dist/index.js"
		},
		"./package.json": "./package.json",
		"./style.css": "./dist/style.css"
	}
}
