{
  "name": "@launchpad-ui/primitives",
  "version": "0.0.1",
  "status": "alpha",
  "publishConfig": {
    "access": "public"
  },
  "description": "Elements used as the foundation of other components.",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./style.css": "./dist/style.css"
  },
  "source": "src/index.ts",
  "scripts": {
    "build": "vite build -c ../../vite.config.ts && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint '**/*.{ts,tsx,js}'",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@launchpad-ui/tokens": "workspace:~",
    "@launchpad-ui/vars": "workspace:~",
    "@react-aria/button": "3.8.0",
    "@react-aria/listbox": "3.10.0",
    "@react-aria/overlays": "3.15.0",
    "@react-aria/utils": "3.18.0",
    "@react-stately/collections": "3.9.0",
    "@react-stately/list": "3.9.0",
    "@react-stately/overlays": "3.6.0",
    "@react-types/button": "3.7.0",
    "@react-types/shared": "3.18.1",
    "@vanilla-extract/recipes": "^0.5.0",
    "classix": "2.1.17"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
