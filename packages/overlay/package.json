{
  "name": "@launchpad-ui/overlay",
  "version": "0.1.17",
  "status": "beta",
  "publishConfig": {
    "access": "public"
  },
  "description": "An element that manages modals and popovers.",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && node ../../scripts/build.js",
    "clean": "rm -rf dist",
    "e2e": "exit 0",
    "lint": "eslint '**/*.{ts,tsx,js}'",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@launchpad-ui/modal": "workspace:~"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
