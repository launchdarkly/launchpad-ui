{
  "name": "@launchpad-ui/overlay",
  "version": "0.1.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "An element that manages modals and popovers.",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && node build.js",
    "clean": "rm -rf dist",
    "e2e": "exit 0",
    "lint": "eslint '**/*.{ts,tsx,js}'",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@launchpad-ui/modal": "workspace:~",
    "lodash.isequal": "^4.5.0",
    "lodash.isfunction": "^3.0.9",
    "lodash.isnil": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.6",
    "@types/lodash.isfunction": "^3.0.7",
    "@types/lodash.isnil": "^4.0.7",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  }
}
